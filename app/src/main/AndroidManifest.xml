<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kz.app.taýypall"
    xmlns:dist="http://schemas.android.com/apk/distribution">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaýypAll">
        <activity
            android:name="kz.app.taýypall.view.login.ForgotPasswordActivity">
        </activity>


        <activity
            android:name="kz.app.taýypall.view.login.VerifyNumberActivity">
        </activity>



        <activity
            android:name="kz.app.taýypall.view.home.settings.CurrentUserPostsActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="kz.app.taýypall.view.home.homefragment.PoatDetails.PostDetailsActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="kz.app.taýypall.view.home.HomeActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="kz.app.taýypall.view.home.messages.MessagePage"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="kz.app.taýypall.view.login.SignInActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="kz.app.taýypall.MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="kz.app.taýypall.notification.MyFirebaseMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/comp_logo" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/mainColor" />
    </application>

</manifest>