<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:onClick="onClick"
    android:id="@+id/parent_layot"
    android:padding="12dp"
    >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:outlineSpotShadowColor="@color/browser_actions_bg_grey"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/browser_actions_bg_grey"
            app:cardCornerRadius="5dp"
            android:onClick="onClick"
            tools:ignore="UsingOnClickInXml">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/image_post"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    />
                <TextView
                    android:id="@+id/image_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vfsd"
                    android:fontFamily="@font/font_artifakt_bold"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/mainColor"/>
                <TextView
                    android:id="@+id/image_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vfsd"
                    android:textSize="10sp"
                    android:fontFamily="@font/font_artifakt_bold"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/mainColor"/>
                <TextView
                    android:id="@+id/image_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vfsd"
                    android:fontFamily="@font/font_artifakt_bold"
                    android:layout_marginLeft="10sp"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>




