<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottomsheet"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ваш отзыв"
        android:textColor="@color/mainColor"
        android:textSize="25dp"/>
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="2"
        android:stepSize="1"
        android:progressTint="@color/mainColor"
        android:progressBackgroundTint="#ccced7"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Ваш комментария"
        android:background="@drawable/edit_round"
        android:textColorHint="@android:color/darker_gray"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/call_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        >
        <Button
            android:id="@+id/cancel"
            android:fontFamily="sans-serif-light"
            android:padding="12dp"
            android:layout_weight="45"
            android:paddingLeft="5dp"
            android:backgroundTint="#fa202b"
            android:text="Отмена"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_round"
            />

        <Button
            android:id="@+id/free"
            android:fontFamily="sans-serif-light"
            android:padding="12dp"
            android:layout_weight="10"
            android:paddingLeft="5dp"
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/edit_btn_round"
            />


        <Button
            android:id="@+id/save"
            android:fontFamily="sans-serif-light"
            android:padding="12dp"
            android:text="Сохранить"
            android:backgroundTint="#32CD32"
            android:layout_weight="45"
            android:textColor="@color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_round"
            />

    </LinearLayout>
</LinearLayout>